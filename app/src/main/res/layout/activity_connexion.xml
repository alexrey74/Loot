<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/loot_clair"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato"
        android:text="Continuer avec " />

    <EditText
        android:id="@+id/connexion_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:hint="Identifiant"
        android:textColorHint="@color/medium_blue"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"/>

    <EditText
        android:id="@+id/connexion_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:hint="Mot de passe"
        android:textColorHint="@color/medium_blue"
        android:inputType="textPassword"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"/>

    <TextView
        android:id="@+id/connexion_pwd_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/medium_blue"
        android:layout_gravity="right"
        android:layout_marginRight="80dp"
        android:text="Mot de passe oubliÃ© ?"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/validation_connexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="Connexion"
        android:background="@drawable/gradient"
        android:textColor="@color/white"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        />


</LinearLayout>