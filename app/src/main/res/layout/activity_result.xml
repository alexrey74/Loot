<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_back_outline"
            android:background="@color/white"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <ImageButton
            android:id="@+id/result_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="right"
            android:src="@drawable/loot_clair"
            android:background="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_nb_dispo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/medium_blue"
            android:text="%d @string/joueurs_dispo"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="135dp"/>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="406dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/light_blue">

        <ImageView
            android:id="@+id/result_profil"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/personW"
            />

        <ImageView
            android:id="@+id/result_chat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/message"
            />

        <ImageView
            android:id="@+id/result_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/home_blue"/>

        <ImageView
            android:id="@+id/result_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/money"
            />

        <ImageView
            android:id="@+id/result_settings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings_outline" />

    </LinearLayout>

</LinearLayout>